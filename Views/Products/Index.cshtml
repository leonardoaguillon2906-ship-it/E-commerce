@using EcommerceApp.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Catálogo de Postres";
    int? selectedCategory = ViewBag.SelectedCategory as int?;
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
}

<style>
    body {
        background-color: #121212;
        color: #eee;
        font-family: 'Segoe UI', sans-serif;
    }

    .product-card {
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .product-card:hover {
        transform: translateY(-7px) scale(1.03);
        box-shadow: 0 20px 40px rgba(13, 110, 253, 0.3);
    }

    .btn-outline-primary {
        border-radius: 10px;
        transition: all 0.3s;
    }

    .btn-outline-primary:hover,
    .btn-outline-primary.active {
        background: linear-gradient(135deg, #0d6efd, #6610f2);
        border-color: #0d6efd;
        color: #fff;
    }

    .badge-category {
        background: linear-gradient(135deg, #0d6efd, #6610f2);
        color: #fff;
        font-size: 0.8rem;
        padding: 5px 10px;
    }

    .price {
        font-size: 1.25rem;
        font-weight: 600;
        color: #0d6efd;
    }

    .stock-badge {
        font-size: 0.85rem;
    }

    /* ✅ CONTROL DE TÍTULOS Y DESCRIPCIÓN */
    .product-title {
        color: #ffffff;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 3rem;
    }

    .product-description {
        color: #cccccc;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 3.5rem;
    }

    .image-container {
        background-color: #1a1a1a;
        text-align: center;
        padding: 0;
        overflow: hidden;
    }

    .image-container img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .product-card:hover .image-container img {
        transform: scale(1.1);
    }
</style>

<div class="container py-5">

    <div class="text-center mb-5">
        <h2 class="fw-bold display-6">Nuestros Postres</h2>
        <p class="text-muted fs-6">
            Dulces momentos creados con ingredientes de la más alta calidad.
        </p>
    </div>

    <div class="d-flex justify-content-center flex-wrap gap-2 mb-5 filter-btns">
        <a asp-area="" 
           asp-controller="Products" 
           asp-action="Index" 
           class="btn btn-outline-primary @(selectedCategory == null ? "active" : "")">
            Todos
        </a>

        @foreach (var category in categories)
        {
            <a asp-area="" 
               asp-controller="Products" 
               asp-action="Index" 
               asp-route-categoryId="@category.Id" 
               class="btn btn-outline-primary @(selectedCategory == category.Id ? "active" : "")">
                @category.Name
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-dark text-center py-5">
            <i class="bi bi-box-seam fs-1 d-block mb-3"></i>
            No hay postres disponibles en esta categoría por el momento.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 product-card border-0">

                        <div class="image-container">
                            <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://images.unsplash.com/photo-1551024506-0bccd828d307?q=80&w=800&auto=format&fit=crop" : product.ImageUrl)" 
                                 alt="@product.Name"
                                 onerror="this.src='https://placehold.co/600x400?text=Postre+Delicioso'" />
                        </div>

                        <div class="card-body d-flex flex-column">
                            
                            <div class="mb-2">
                                <span class="badge badge-category">
                                    @(product.Category?.Name ?? "General")
                                </span>
                            </div>

                            <h5 class="fw-semibold product-title">
                                @product.Name
                            </h5>

                            <p class="small mb-3 product-description">
                                @product.Description
                            </p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price">$@product.Price.ToString("N2")</span>

                                    @if (product.Stock > 0)
                                    {
                                        <span class="badge bg-success stock-badge">
                                            Stock: @product.Stock
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger stock-badge">
                                            Agotado
                                        </span>
                                    }
                                </div>

                                @if (product.Stock > 0)
                                {
                                    <form asp-area="" 
                                          asp-controller="Cart" 
                                          asp-action="Add" 
                                          method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />

                                        <button type="submit" class="btn btn-outline-primary w-100 fw-semibold">
                                            <i class="bi bi-cart-plus me-2"></i>Agregar al pedido
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary w-100 fw-semibold" disabled>
                                        No disponible
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
@using EcommerceApp.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Administrar Productos";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Administración de Productos</h2>

<a asp-area="Admin"
   asp-controller="Products"
   asp-action="Create"
   class="btn btn-primary mb-3">
    + Nuevo Producto
</a>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr class="text-center">
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th>Banner</th>
            <th style="width:250px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">
                    No hay productos registrados.
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/80x80/666/fff?text=Sin+Foto" : item.ImageUrl)"
                             alt="@item.Name"
                             style="width:80px;height:80px;object-fit:cover;border-radius:6px;border:1px solid #ddd;" />
                    </td>

                    <td>@item.Name</td>

                    <td class="text-end">
                        $@item.Price.ToString("N2")
                    </td>

                    <td class="text-center">
                        @if (item.Stock > 0)
                        {
                            <span class="badge bg-success">@item.Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Sin stock</span>
                        }
                    </td>

                    <td>@item.Category?.Name</td>

                    <td class="text-center">
                        @if (item.IsHomeBanner)
                        {
                            <span class="badge bg-primary">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>

                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-1">
                            <a asp-area="Admin"
                               asp-controller="Products"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-warning">
                                Editar
                            </a>

                            <form asp-area="Admin" asp-controller="Products" asp-action="ToggleBanner" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(item.IsHomeBanner ? "btn-secondary" : "btn-info")">
                                    Banner
                                </button>
                            </form>

                            <form asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('¿Está seguro de eliminar este producto?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Eliminar
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@{
    ViewData["Title"] = "Pago Fallido";
}

<div class="container mt-5 text-center">
    <div class="card shadow p-5">
        <h1 class="text-danger display-4">Â¡Pago no completado!</h1>
        <p class="lead">Hubo un problema al procesar tu pago.</p>


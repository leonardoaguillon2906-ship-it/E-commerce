@model EcommerceApp.Models.Order

@{
    ViewData["Title"] = "¡Pago Exitoso!";
}

<div class="container mt-5 text-center">
    <div class="card shadow p-5">
        <h1 class="text-success display-4">¡Gracias por tu compra!</h1>
        <p class="lead">Tu pago ha sido procesado correctamente.</p>

        @if (Model != null)
        {
            <p class="text-muted">Número de Orden: @Model.Id</p>
            <p class="text-muted">Estado: @Model.Status</p>

            <h4 class="mt-4">Productos comprados:</h4>
            <ul class="list-group">
                @foreach (var item in Model.OrderItems)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item.Product.Name
                        <span>Cantidad: @item.Quantity | Stock actual: @item.Product.Stock</span>
                    </li>
                }
            </ul>

            <p class="mt-3"><strong>Total:</strong> $@Model.Total</p>
        }
        else
        {
            <p>No se encontró información de la orden.</p>
        }

        <div class="mt-4">
            <a href="/" class="btn btn-primary btn-lg">Volver a la Tienda</a>
            <a asp-area="Cliente" asp-controller="Orders" asp-action="Index" class="btn btn-outline-secondary btn-lg">Ver mis Pedidos</a>
        </div>
    </div>
</div>

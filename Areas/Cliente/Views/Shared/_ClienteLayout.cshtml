<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TechStore</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #121212;
            color: #eee;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .navbar .nav-link,
        .navbar .btn-link {
            color: rgba(255,255,255,0.85);
        }

        .navbar .nav-link:hover,
        .navbar .btn-link:hover {
            color: #fff;
            text-decoration: underline;
        }

        /* Footer */
        footer {
            background-color: rgba(0,0,0,0.5);
            color: #ccc;
            padding: 1.5rem 0;
            text-align: center;
            margin-top: 2rem;
        }

        main {
            min-height: 75vh; /* Mantener footer abajo */
        }

        .btn-outline-light {
            font-weight: 500;
        }
    </style>
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">

        <!-- Marca -->
        <a class="navbar-brand"
           asp-area=""
           asp-controller="Home"
           asp-action="Index">
            TechStore
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link"
                       asp-area=""
                       asp-controller="Home"
                       asp-action="Index">
                        Inicio
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"
                       asp-area="Cliente"
                       asp-page="/Products/Index">
                        Productos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"
                       asp-area="Cliente"
                       asp-page="/Cart/Index">
                        ðŸ›’ Carrito
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="nav-link">
                            Hola, @User.Identity.Name
                        </span>
                    </li>
                    <li class="nav-item">
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link">Cerrar sesiÃ³n</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Iniciar sesiÃ³n</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- CONTENIDO PRINCIPAL -->
<main class="container mt-4">
    @RenderBody()
</main>

<!-- PIE DE PÃGINA -->
<footer>
    <div class="container">
        <p class="mb-1">&copy; 2025 TechStore. Todos los derechos reservados.</p>
        <p class="mb-0">
            <a href="/PoliticaPrivacidad" class="text-decoration-none text-muted me-3">PolÃ­tica de Privacidad</a>
            <a href="/TerminosCondiciones" class="text-decoration-none text-muted me-3">TÃ©rminos y Condiciones</a>
            <a href="/Soporte" class="text-decoration-none text-muted">Soporte</a>
        </p>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)

</body>
</html>

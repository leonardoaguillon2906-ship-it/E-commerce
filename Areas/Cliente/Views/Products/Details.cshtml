    @using EcommerceApp.Models
    @model Product

    @{
        ViewData["Title"] = "Detalles del Producto";
    }

    <style>
        body {
            background-color: #121212;
            color: #eee;
            font-family: 'Segoe UI', sans-serif;
        }

        .product-details {
            background-color: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 30px;
        }

        .product-details img {
            width: 100%;
            max-height: 400px;
            object-fit: cover;
            border-radius: 10px;
        }

        .price {
            font-size: 2rem;
            font-weight: 600;
            color: #0d6efd;
        }

        .stock-badge {
            font-size: 1rem;
        }

        .btn-outline-primary {
            border-radius: 10px;
            transition: all 0.3s;
        }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            border-color: #0d6efd;
            color: #fff;
        }
    </style>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="product-details">

                    <!-- Imagen -->
                    <div class="mb-4 text-center">
                        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/tecnologia.jpg" : Model.ImageUrl)" alt="@Model.Name" />
                    </div>

                    <!-- Información -->
                    <h2 class="fw-bold mb-3">@Model.Name</h2>

                    <span class="badge bg-primary mb-3">@Model.Category?.Name</span>

                    <p class="text-muted mb-3">@Model.Description</p>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="price">$@Model.Price.ToString("N2")</span>

                        @if (Model.Stock > 0)
                        {
                            <span class="badge bg-success stock-badge">Stock: @Model.Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger stock-badge">Sin stock</span>
                        }
                    </div>

                    <!-- Botón Agregar al carrito -->
                    @if (Model.Stock > 0)
                    {
                        <form asp-area="Cliente"
                            asp-controller="Cart"
                            asp-action="Add"
                            method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <input type="hidden" name="quantity" value="1" />

                            <button type="submit" class="btn btn-outline-primary w-100 fw-semibold">
                                Agregar al carrito
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary w-100 fw-semibold" disabled>
                            No disponible
                        </button>
                    }

                    <div class="mt-3">
                        <a asp-area="Cliente" asp-controller="Products" asp-action="Index" class="btn btn-secondary">
                            Volver al catálogo
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
